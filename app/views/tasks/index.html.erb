<% if logged_in? %>
  <h1>タスク一覧</h1>
  
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.content %> &#091; <%= task.status %> &#093; </li>
    <% end %>
  </ul>
  
  <%= link_to '新規タスクの作成', new_task_path %>

<% else %>
  <h1>Welcome to Tasklist</h1>
  <%= link_to 'Sign up now!', signup_path %>
<% end %>